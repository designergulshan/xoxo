type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  posts: [Post!]! @relation(name: "UserPosts")
  createdAt: DateTime @createdAt
  updatedAt: DateTime @updatedAt
  likedPosts: [Post!]! @relation(name: "UserLikedPosts")
}

type Post {
  id: ID! @id
  title: String!
  description: String!
  author: User! @relation(name: "UserPosts", link: INLINE)
  createdAt: DateTime @createdAt
  updatedAt: DateTime @updatedAt
  likedBy: [User!]! @relation(name: "UserLikedPosts", link: INLINE)
}
